<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
     android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_margin="3dp"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corners_my_badges"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/yellow" />

    <com.igniva.indiecore.utils.CircularImageView
        android:id="@+id/iv_mybadge"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/add_badge" />

    <LinearLayout
        android:layout_marginRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_badge_on_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/badge_off" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_mybadge_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_mybadge"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:maxLength="11"
        android:text="@string/app_name"
        android:textColor="@android:color/black"
        android:textSize="13sp" />
    </RelativeLayout>
</RelativeLayout>

