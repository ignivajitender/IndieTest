<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_other_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.igniva.indiecore.utils.CircularImageView
            android:id="@+id/iv_other_user"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/default_user"/>

        <TextView
            android:id="@+id/tv_other_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:hint="Message from other side"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_this_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_this_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:hint="Message from other side"/>

        <com.igniva.indiecore.utils.CircularImageView
            android:id="@+id/iv_this_user"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/default_user"/>
    </LinearLayout>

</LinearLayout>