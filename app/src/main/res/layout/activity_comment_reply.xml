<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/light_gray" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include

        android:id="@+id/toolbar_comment_reply_activity"
        layout="@layout/toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/ll_upper_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_name_comment_reply_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="90dp"
                    android:layout_toRightOf="@+id/iv_userimg_"
                    android:gravity="center_vertical"
                    android:text="User Name"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/available_circle" />

                <TextView
                    android:id="@+id/tv_available_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:text="@string/available" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lower_"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/ll_upper_"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_post_time_comment_reply_activity"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_user_name"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="90dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="yesterday 14:30"
                    android:textColor="@color/light_black"
                    android:textSize="12sp" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:src="@drawable/dropdown_icon"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <com.igniva.indiecore.utils.CircularImageView
                android:id="@+id/iv_user_img_comment_reply_activity"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/default_user" />


        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:background="@color/white"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <!--<ImageView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:visibility="gone"-->
                        <!--android:layout_height="200dp"-->
                        <!--android:layout_margin="5dp"-->
                        <!--android:scaleType="centerCrop"-->
                        <!--android:background="@color/black" />-->

                    <TextView
                        android:id="@+id/tv_comment_text_comment_reply_activity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_user_name"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:textColor="@color/light_black"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/light_black"
                        android:layout_marginBottom="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        >

                        <TextView
                            android:id="@+id/tv_like_comment_reply"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:onClick="onClick"
                            android:drawableLeft="@drawable/like_grey_icon"
                            android:drawablePadding="5dp"
                            android:text="2" />

                        <TextView
                            android:id="@+id/tv_neutral_comment_reply"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:onClick="onClick"
                            android:drawableLeft="@drawable/hand_icon_grey"
                            android:drawablePadding="5dp"
                            android:text="2" />

                        <TextView
                            android:id="@+id/tv_dislike_comment_reply"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:onClick="onClick"
                            android:drawableLeft="@drawable/dislike_icon_grey"
                            android:drawablePadding="5dp"
                            android:text="2" />

                        <TextView
                            android:id="@+id/tv_reply_comment_reply"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:onClick="onClick"
                            android:drawableLeft="@drawable/share_icon_grey"
                            android:drawablePadding="5dp"
                            android:text="2" />

                        <!--<TextView-->
                        <!--android:id="@+id/tv_share_comment_activity"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_weight="1"-->
                        <!--android:drawableLeft="@drawable/share_grey_icon_circle"-->
                        <!--android:drawablePadding="5dp"-->
                        <!--android:text="2" />-->

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/light_black"
                        android:layout_marginBottom="5dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_reply_txt"
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:background="@drawable/rounded_corners_distance_text_block"
                                android:hint="@string/write_reply"
                                android:gravity="start"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:maxLines="3"
                                android:paddingStart="12dp"
                                android:textColorHint="@color/light_black"
                                android:textColor="@color/light_black"
                                android:layout_marginRight="3dp"
                                android:layout_height="match_parent"
                                android:paddingLeft="12dp" />
                            <ImageView
                                android:id="@+id/iv_post_reply"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:onClick="onClick"
                                android:layout_marginRight="2dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/post_button"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_replies"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >                    </android.support.v7.widget.RecyclerView>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/delete_icon"
                android:layout_gravity="right"
                android:visibility="gone"
                android:onClick="onClick"
                android:layout_marginTop="-8dp"
                android:layout_marginRight="8dp"
                android:layout_height="50dp" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>