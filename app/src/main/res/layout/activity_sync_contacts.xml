<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/it_is_recommended_to_choose_a"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="@string/it_is_recommended_to_choose_b"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="@string/it_is_recommended_to_choose_c"
            android:textSize="20sp" />

        <!--<ImageView-->
            <!--android:padding="2dp"-->
            <!--android:id="@+id/iv_syncbtn"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginTop="50dp"-->
            <!--android:onClick="onClick"-->
            <!--android:src="@drawable/start_btn" />-->


        <com.github.jorgecastilloprz.FABProgressCircle
            android:id="@+id/fabProgressCircle"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:arcColor="@color/fab_orange_dark"
            app:arcWidth="4dp"
            android:onClick="onClick"
            app:finalIcon="@drawable/done">

            <android.support.design.widget.FloatingActionButton
                android:background="@color/colorPrimary"
                android:id="@+id/fab"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:layout_width="wrap_content"
                app:elevation="5dp"
                android:onClick="onClick"
                app:rippleColor="#10000000" />
        </com.github.jorgecastilloprz.FABProgressCircle>

        <ImageView
            android:background="@drawable/done"
            android:id="@+id/img_btn"
            android:onClick="onClick"
            android:layout_gravity="center"
            android:layout_height="35dp"
            android:layout_width="35dp" />

        <TextView
            android:id="@+id/tv_start_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Start Syncing"
            android:textSize="22sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_skip_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:onClick="onClick"
        android:textColor="@color/blue"
        android:text="Skip this step"
        android:textSize="18sp" />
</RelativeLayout>